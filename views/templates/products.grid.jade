script(id='temp-product', type='text/x-handlebars-template').
  <div class="col-sm-3">
    <div class="grid-element container-fb">
      <div class="clearfix">
        <a href="/product/{{product._id}}/edit"><div style="background-image:url(/uploads/l_{{product.imageFileName}})" class="img-thumbnail grid-image clearfix"></div></a>
      </div>
      <div class="grid-body clearfix mt10">
        <div class="clearfix overflow">
          <p class="m0 imp lato overflow"><a class="overflow" href="/product/{{product._id}}/edit">{{product.title}}</a></p>
          <p class="m0 imp lato">{{currency product.price}}</p>
        </div>
      </div>
    </div>
  </div>

script(id='grid-item-product', type='text/x-handlebars-template').
  {{#each products}}
    {{>product}}
  {{/each}}

